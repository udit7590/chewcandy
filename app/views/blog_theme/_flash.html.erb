<% if flash[:error] || flash[:alert] %>
  <div class="alert alert-error-theme">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <center><strong><%= flash[:error] || flash[:alert] %></strong></center>
  </div>
<% end %>
<% if flash[:notice] %>
  <div class="alert alert-success-theme">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <center><strong><%= flash[:notice] %></strong></center>
  </div>
<% end %>
