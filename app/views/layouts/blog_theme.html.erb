<!DOCTYPE html>
<html>
<head>
  <meta charset=utf-8>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= yield :meta_tags %>
  <title><%= @title.presence || 'ChewCandy' %></title>
  <!-- Load Oswald font -->
  <link href='http://fonts.googleapis.com/css?family=Oswald:400,300,700' rel='stylesheet' type='text/css'>
  <!-- Load css styles -->
  <%= stylesheet_link_tag    'blog_theme', media: 'all', 'data-turbolinks-track' => true %>
  <!--[if IE 7]>
      <link rel="stylesheet" type="text/css" href="css/pluton-ie7.css" />
  <![endif]-->
  <%# stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <!-- Fav and touch icons -->
  <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/assets/images/ico/apple-touch-icon-144.png">
  <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/assets/images/ico/apple-touch-icon-114.png">
  <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/assets/images/apple-touch-icon-72.png">
  <link rel="apple-touch-icon-precomposed" href="/assets/images/ico/apple-touch-icon-57.png">
  <link rel="shortcut icon" href="/assets/images/ico/favicon.ico">
  <%# stylesheet_link_tag 'custom', media: 'all', 'data-turbolinks-track' => true %>
  <%= yield :stylesheets %>
  <%= csrf_meta_tags %>
</head>
<body>

  <!-- Google Tag Manager -->
  <noscript><iframe src="//www.googletagmanager.com/ns.html?id=GTM-5VG6XC"
  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
  new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
  j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
  '//www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
  })(window,document,'script','dataLayer','GTM-5VG6XC');</script>
  <!-- End Google Tag Manager -->

  <%= render 'blog_theme/flash' %>
  <%= render 'blog_theme/navigation' %>
  <section id="content_area">
    <div class="clearfix wrapper main_content_area">
      <%= yield %>
      <%= render 'blog_theme/sidebar' %>
    </div>
  </section>
  <%= render 'blog_theme/footer_upper' %>
  <%= render 'blog_theme/footer' %>
  
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'blog_theme' %>
  <script type="text/javascript">
    $(document).ready(function() {
      $('.tooltip').tooltipster();
    });
  </script>
  <script type="text/javascript">
    selectnav('nav', {
      label: '-Navigation-',
      nested: true,
      indent: '-'
    });
  </script>
  <script type="text/javascript">
    $(document).ready(function() {
      $('.pgwSlider').pgwSlider({
        
        intervalDuration: 5000
      
      });
    });
  </script>

  <%= yield :javascripts %>
  <!-- css3-mediaqueries.js for IE8 or older -->
  <!--[if lt IE 9]>
      <script src="js/respond.min.js"></script>
  <![endif]-->

  <%= yield :bootstrap_tour %>

</body>
</html>
