<div style="margin: auto; width: 1000px">
  <%= render 'admin_shared/flash' %>

  <%= render 'admin_shared/navigation' %>
  
  <div>
    <%= @product.name %> | INR <%= @product.price %> | <%= @product.stock %> gms available | <%= @product.discount %> % discount
    <br />
    <% if @product.image.present? %>
      <%= image_tag @product.image.url(:preview) %>
    <% else %>
      <p style="color: red">No image present</p>
    <% end %>
    <br />
    <%= link_to 'Edit', edit_product_path(@product.id) %>
    <%= link_to 'Destroy', product_path(@product.id), method: :delete, data: { confirm: 'Are you sure?' } %>

  </div>
</div>
