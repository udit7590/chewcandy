<!-- Contact section start -->
<div id="contact" class="contact">
  <div class="section secondary-section">
    <div class="container">
      <div class="title">
        <h1>Contact Us</h1>
        <p><%= I18n.t('pages.contact_us.sub_heading') %></p>
      </div>
    </div>
    <div class="map-wrapper">
      <div class="map-canvas" id="map-canvas">Loading map...</div>
      <div class="container">
        <div class="row-fluid">
          <div class="span5 contact-form centered">
            <h3>Say Hello</h3>
            <div id="successSend" class="alert alert-success invisible">
              <strong>Well done!</strong>Your message has been sent.
            </div>
            <div id="errorSend" class="alert alert-error invisible">There was an error.</div>
            <%= form_for(UserFeedback.new, url: feedback_path, method: :post) do |f| %>
            <!-- <form id="contact-form" action="php/mail.php"> -->
              <% if @user.guest? %>
              <div class="control-group">
                <div class="controls">
                  <!-- <input class="span12" type="text" id="name" name="name" placeholder="* Your name..." /> -->
                  <%= f.text_field :user_name, class: 'span12', placeholder: '* Your name...', required: true %>
                  <div class="error left-align" id="err-name">Please enter name.</div>
                </div>
              </div>
              <div class="control-group">
                <div class="controls">
                  <!-- <input class="span12" type="email" name="email" id="email" placeholder="* Your email..." /> -->
                  <%= f.email_field :user_email, class: 'span12', placeholder: '* Your email...', required: true %>
                  <div class="error left-align" id="err-email">Please enter valid email adress.</div>
                </div>
              </div>
              <% else %>
                <%= f.hidden_field :user_name, value: @user.name %>
                <%= f.hidden_field :user_email, value: @user.email %>
              <% end %>
              <div class="control-group">
                <div class="controls">
                  <%= f.text_area :feedback, class: 'span12', placeholder: '* Comments...', required: true %>
                  <!-- <textarea class="span12" name="comment" id="comment" placeholder="* Comments..."></textarea> -->
                  <div class="error left-align" id="err-comment">Please enter your comment.</div>
                </div>
              </div>
              <div class="control-group">
                <div class="controls">
                  <button id="send-mail" class="message-btn">Send message</button>
                </div>
              </div>
            <% end %>
            <!-- </form> -->
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="span9 center contact-info">
        <p><%= I18n.t('site.contact_address') %></p>
        <p class="info-mail"><%= I18n.t('site.contact_email') %></p>
