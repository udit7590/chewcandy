<!-- Newsletter section start -->
<% if false %>
<div class="section third-section">
  <div class="container newsletter">
    <div class="sub-section">
      <div class="title clearfix">
        <div class="pull-left">
          <h3>Newsletter</h3>
        </div>
      </div>
    </div>
    <div id="success-subscribe" class="alert alert-success invisible">
      <strong>Well done!</strong>You have successfully subscribed to our newsletter.
    </div>
    <div class="row-fluid">
      <div class="span5">
        <p>You can subscribe to our newsletter to have the latest updates on chewcandy. You will also be the first to receive information about various offers, new products and general things related to candies.</p>
      </div>
      <div class="span7">
        <%= form_for(@user, url: newsletter_path, method: :post, html: { class: 'inline-form' }) do |f| %>
        <!-- <form class="inline-form"> -->
          <% if @user.guest? %>
            <%= f.email_field :email, class: 'span8', placeholder: 'Enter your email', required: true, value: '' %>
          <% else %>
            <%= f.email_field :email, class: 'span8', placeholder: 'Enter your email', required: true, readonly: true %>
            <%= f.hidden_field :email, value: @user.email %>
          <% end %>
          <!-- <input type="email" name="email" id="nlmail" class="span8" placeholder="Enter your email" required /> -->
          <button id="subscribe" class="button button-sp">Subscribe</button>
        <% end %>
        <!-- </form> -->
        <div id="err-subscribe" class="error centered">Please provide valid email address.</div>
      </div>
    </div>
  </div>
</div>
<!-- Newsletter section end -->
<% end %>