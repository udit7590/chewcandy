<!-- Start user orders section -->
<div class="section secondary-section" id="myOrders">
  <div class="section third-section" id="checkoutForm" style="min-height: 530px;">
    <div class="container">
      <h2>Change your password</h2>
      <hr />
        <div class="special-dark-form-element-container">

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>
            <%= f.hidden_field :reset_password_token %>

            <div class="field">
              <% f.label :password, "New password" %>
              <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'special-dark-form-element special-dark-form-block-element', placeholder: 'New Password*' %>
            </div>

            <div class="field">
              <% f.label :password_confirmation, "Confirm new password" %>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'special-dark-form-element special-dark-form-block-element', placeholder: 'Confirm New Password*' %>
            </div>

            <div class="actions">
              <%= f.submit "Change my password", class: 'button button-sp btn-block' %>
            </div>
          <% end %>

          <%= render "users/shared/links" %>

        </div>

    </div>
  </div>
</div>
<!-- End user orders section -->
