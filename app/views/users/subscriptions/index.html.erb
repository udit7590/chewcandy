<!-- Start user orders section -->
<div class="section secondary-section" id="myOrders">
  <div class="section third-section" id="checkoutForm" style="min-height: 530px;">
    <div class="container newsletter">
      <% if @past_subscriptions.present? || @subscription.present? %>
        <div class="sub-section">
          <div class="title clearfix">
            <div class="pull-left">
              <h3>Following is the list of your subscriptions</h3>
            </div>
          </div>
        </div>
        <table class="table-info">
          <thead>
            <tr>
              <th>ID</th>
              <th>Placed On</th>
              <th>Status</th>
              <th>Total Boxes Delivered</th>
              <th>Total Amount Collected</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: 'header_row', locals: { subscriptions: @subscriptions, type: 'Active' } %>
            <% @subscriptions.each do |subscription| %>
              <%= render partial: 'subscription', locals: { subscription: subscription } %>
            <% end %>
            <%= render partial: 'header_row', locals: { subscriptions: @past_subscriptions, type: 'Past' } %>
            <% @past_subscriptions.each do |past_subscription| %>
              <%= render partial: 'subscription', locals: { subscription: past_subscription } %>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="sub-section">
          <div class="title clearfix">
            <div class="pull-left">
              <h3 class='text-error'>You have not subscribed to any of our plans. We have wide range of candies available with us. Grab some of them now. You can also opt for monthly packages delievered right at your place. Be Candilicious! :)</h3>
            </div>
          </div>
        </div>
        <div class='center-image'>
          <%= image_tag 'grab_candy.png' %>
          <br /><br />
          <%= link_to 'Subscribe Now', root_path + '#subscriptions', class: 'button btn-block button-sp' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- End user orders section -->